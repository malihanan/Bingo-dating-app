@model IEnumerable<Bingo.Models.Conversation>

@{
    ViewBag.Title = "ConversationWithContact";
}


<!DOCTYPE html>
<html>

<body>
    <h1>Conversations</h1>
    <div class="container">
        <div class="row">
            
            <div class="col-xs-12 col-md-9 ">
                <div class="row">
                    <div class="col-xs-12">
                        <ul style="list-style-type: none;" class="list-group">
                        
@foreach (var item in Model)
{
    if (item.sender_id == ViewBag.currentUser)
    {
                            <li style="padding: 15px 15px; border-radius: 20px; margin: 10px 10px 10px 10px; width: 50%; background-color: #4d9aff; float: right; color: #fff;">@Html.DisplayFor(modelItem => item.message)</li>

    }
    else
    {
                            <li style="padding: 15px 15px; border-radius: 20px; margin: 10px 10px 10px 10px; width: 50%; background-color: #d9d9d9; float: left;">@Html.DisplayFor(modelItem => item.message)</li>
                         
    }
}
                        </ul>
                    </div>
                    <div>
                        <div style="background-color: #e6e6e6; width: 100%; height: 150%">
                            <textarea name="messages" form="cform" style="background-color: inherit; width: 100%; padding: 10px 10px 0px; border: none; display: inline-block;" id="msg_box" placeholder="Type your message"></textarea>

                            <form action="@Url.Action("ConversationWithContact", "Match")" id="cform" method="post">
                                <input class="btn btn-primary" style="margin-bottom: 25px;" id="sendMessage" type="submit" value="Send" />
                            </form>                      
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>

